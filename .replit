modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist", "package-lock.json"]

[nix]
channel = "stable-24_05"
packages = ["zip", "python311", "python311Packages.websockets", "python311Packages.asyncio-mqtt"]

[[ports]]
localPort = 5000
externalPort = 80
name = "BruceOps App"

[[ports]]
localPort = 4008
externalPort = 8080
name = "MUD Server"

[[ports]]
localPort = 8080
externalPort = 3000
name = "MUD Terminal"

[env]
PORT = "5000"
MUD_PORT = "4008"
MUD_TERMINAL_PORT = "8080"
NODE_ENV = "production"

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "start-replit.sh"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start All Services"

[[workflows.workflow]]
name = "Start All Services"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "chmod +x start-replit.sh && ./start-replit.sh"

[[workflows.workflow]]
name = "Start BruceOps"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd harriswildlands && npm install && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Start MUD Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mud-server && pip install websockets && python src/server.py"
waitForPort = 4008

[[workflows.workflow]]
name = "Start MUD Terminal"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd mud-terminal && python -m http.server 8080"
waitForPort = 8080

[agent]
integrations = ["javascript_log_in_with_replit:2.0.0", "google-drive:1.0.0"]

[userenv]

[userenv.shared]
ISSUER_URL = "https://replit.com/oidc"
AI_PROVIDER = "gemini"
MUD_ENABLED = "true"
